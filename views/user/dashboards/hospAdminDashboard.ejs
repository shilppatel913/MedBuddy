<html lang="en">
  <link rel="stylesheet" href="/stylesheets/landing.css" />
  <link
    rel="stylesheet"
    href="https://fonts.googleapis.com/icon?family=Material+Icons"
  />
  <%- include("../../partials/header"); -%>
