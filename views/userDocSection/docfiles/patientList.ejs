<!DOCTYPE html>
<html>
  <%- include("../../partials/header"); -%>

    <title>Page Title</title>
  </head>
 <link rel="stylesheet" href="/stylesheets/userDocSection/docfiles/patientList.css">
 
  <body id="body-pd">
    <%-include("../../partials/altNavbar"); -%>
    <%-include("../../partials/altSidebar");-%>
    <% console.log(patients)%>
    <% if(patients.length > 0) { %> 
    <div class="content-block">
        <div class="card">
          <h3 style="text-align: center;"><strong>Available Appointments</strong></h3>
          <div id="patientList">
          <table>
            <thead>
              <tr class="table100-head">
                <th class="column1">S.N</th>
                <th class="column1">Name</th>
                <th class="column1">Problem</th>
                <th class="colum1">Selected Slot</th>
                <th class="column1">Slot Time</th>
                <th class="column7"></th>

              </tr>
            </thead>
            <tbody id="front">
              <%for(var i=0;i<patients.length;i++){%>
              <%  if(patients[i].activityStatus == true){ %>
              <tr>
                <td class="column1"><%=i+1%></td>
                <td class="column1"><%=patients[i].patientId.firstName+" "+patients[i].patientId.lastName%></td>
                <td class="column1"><%= patients[i].disease %></td>
                <td class="column1"><%=(patients[i].selectedSlot.slice(4,5)=="A" ?"Morning":"Evening")%></td>
                <td class="column1"><%=patients[i].slot%></td>
                <td class="column7"><a href="/userDocSection/patientList/patientInfo/<%=patients[i].patientId._id%>"><i style="color: green;" class="fas fa-arrow-alt-circle-right fa-lg"></i></a></td>

              </tr>
              <%}%>
              <%}%>
            </tbody>
          </table>
        </div>
        </div>
    </div>
    <% }else { %>
      <h4 style="text-align: center;">No Current Appointments Found!!</h4>
    <% } %>   
       <%-include("../../partials/footer"); -%>
  </body>

</html>

