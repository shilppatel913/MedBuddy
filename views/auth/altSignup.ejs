<!DOCTYPE html>
<html lang="en">

<head>
  <link href="/stylesheets/authCSS/material-design-iconic-font.min.css" rel="stylesheet" media="all">
  <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i"
    rel="stylesheet">
  <link href="/stylesheets/authCSS/select2.min.css" rel="stylesheet" media="all">
  <link href="/stylesheets/authCSS/altSignup.css" rel="stylesheet" media="all">
  <script src="/jsFiles/cities.js"></script>

</head>

<body>
  <div class="page-wrapper bg-red p-t-180 p-b-100 font-robo">
    <div class="wrapper wrapper--w960">
      <div class="card card-2" style="box-shadow: 1px -1px 20px 15px rgb(0 0 0 / 33%);">
        <div class="card-heading"></div>
        <form action="/register" method="POST">
          <div class="card-body">
            <h2 class="title">Registration Info</h2>
            <div id="personalInfo">
              <div class="row row-space">
                <div class="col-2">
                  <div class="input-group">
                    <input class="input--style-2" type="text" placeholder="First Name" name="firstName" required>
                  </div>
                </div>
                <div class="col-2">
                  <div class="input-group">
                    <input class="input--style-2" type="text" placeholder="Last Name" name="lastName" required>
                  </div>
                </div>
              </div>
              <div class="row row-space">
                <div class="col-2">
                  <div class="input-group">
                    <input class="input--style-2" type="text" placeholder="Street Address" name="streetAddress"
                      required>
                  </div>
                </div>
                <div class="col-2">
                  <div class="input-group">
                    <div class="rs-select2 js-select-simple select--no-search">
                      <select name="state" onchange="print_city('state', this.selectedIndex)" id="searchState"
                        required></select>
                      <div class="select-dropdown"></div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row row-space">
                <div class="col-2">
                  <div class="input-group">
                    <div class="rs-select2 js-select-simple select--no-search">
                      <select name="city" id="state" required>
                        <option disabled="disabled" selected="selected">
                          City
                        </option>
                      </select>
                      <script language="javascript">
                        print_state("searchState");
                      </script>
                      <div class="select-dropdown"></div>
                    </div>
                  </div>
                </div>
                <div class="col-2">
                  <div class="input-group">
                    <input class="input--style-2" type="text" placeholder="Zip Code" name="zip" required>
                  </div>
                </div>
              </div>
              <div class="col-2">
                <div class="input-group">
                  <div class="rs-select2 js-select-simple select--no-search">
                    <select name="gender" required>
                      <option disabled="disabled" selected="selected">
                        Gender
                      </option>
                      <option>Male</option>
                      <option>Female</option>
                      <option>Other</option>
                    </select>
                    <div class="select-dropdown"></div>
                  </div>
                </div>
              </div>
            </div>
            <div class="p-t-30">
              <button class="btn btn--radius btn--green" id="goToSetup" type="button">Setup Your Account</button>
            </div>
            <div id="setupInfo" style="padding-top: 2rem;">
              <div class="row row-space">
                <div class="col-2">
                  <div class="input-group">
                    <input class="input--style-2" type="text" placeholder="Username" name="username" required>
                  </div>
                </div>
                <div class="col-2">
                  <div class="input-group">
                    <input class="input--style-2" type="password" placeholder="Password" name="password" required>
                  </div>
                </div>
              </div>
              <div class="row row-space">
                <div class="col-2">
                  <div class="input-group">
                    <input class="input--style-2" type="email" placeholder="Email" name="email" required>
                  </div>
                </div>
                <div class="col-2">
                  <div class="input-group">
                    <input class="input--style-2" type="tel" max="10" pattern="[1-9]{1}[0-9]{9}"
                      placeholder="Contact Number" name="contactNumber" required>
                  </div>
                </div>
              </div>
              <div class="col-2">
                <div class="input-group">
                  <div class="rs-select2 js-select-simple select--no-search">
                    <select name="userRole" required>
                      <option disabled="disabled" selected="selected">
                        Signing Up As
                      </option>
                      <option value="patient">Patient</option>
                      <option value="doctor">Doctor</option>
                      <option value="hospAdmin">Hospital Management</option>
                    </select>
                    <div class="select-dropdown"></div>
                  </div>
                </div>
              </div>
            </div>
            <div class="p-t-30" id="submit">
              <button type="submit" class="btn btn--radius btn--green">SignIn</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="/jsFiles/select2.min.js"></script>
  <script src="/jsFiles/global.js"></script>
  <script>
    function toggleShowPassword() {
      var x = document.getElementById("inputPassword4");
      if (x.type === "password") {
        x.type = "text";
      } else {
        x.type = "password";
      }
    }
    $("#goToSetup").on("click", function () {
      if ($(this).text() == "Setup Your Account") {
        console.log("aaaaaaaaaaaassssssssss")
        $(this).html("Go Back To Personal Settings");
        // $(this)
        //   .removeClass("btn btn-xs btn-success")
        //   .addClass("btn btn-xs btn-warning");
        $("#submit").show();
      } else {
        $(this).html("Setup Your Account");
        // $(this)
        //   .removeClass("btn btn-xs btn-warning")
        //   .addClass("btn btn-xs btn-success");
        $("#submit").hide();
      }
      $("#personalInfo").toggle();
      $("#setupInfo").toggle();
    });
  </script>

</body>

</html>